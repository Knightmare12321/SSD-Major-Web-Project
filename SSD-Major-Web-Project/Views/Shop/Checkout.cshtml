@model SSD_Major_Web_Project.ViewModels.CheckoutVM

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="checkout-container">

    <div class="row">
        <h2>checkout</h2>
        <div class="col-md-4">
            <div class="checkout">
                <h3>Shipping Address</h3>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ShoppingCart.Subtotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShoppingCart.Subtotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShoppingCart.ShippingFee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShoppingCart.ShippingFee)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShoppingCart.Taxes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShoppingCart.Taxes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShoppingCart.GrandTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShoppingCart.GrandTotal)

            </dd>
            <div>
                <form action="@Url.Action("Checkout", "Shop", new { area = "" })" method="post">
                    @Html.HiddenFor(model => model.Order.Customer.PkCustomerId)
                    <input type="submit" value="Proceed to Checkout" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
</div>

