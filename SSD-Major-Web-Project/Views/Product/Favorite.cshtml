@model IEnumerable<SSD_Major_Web_Project.Models.Product>

@{
    ViewData["Title"] = "Favorite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Favorite</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PkProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PkProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PkProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
