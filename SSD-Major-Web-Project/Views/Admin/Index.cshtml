@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Admin Page</h1>
    <p>Hello Admin</p>
    <div id="admin-index-grid">
        <div class="grid-item">
            <button onclick="location.href='@Url.Action("CreateProduct","Admin")'">CREATE NEW PRODUCT</button>
            <p>Create a new product listing</p>
        </div>
        <div class="grid-item">
            <button onclick="location.href='@Url.Action("AdminOrder","Admin")'">ALL ORDERS</button>
            <p>Manage open orders and fulfilled orders</p>
        </div>
        <div class="grid-item">
            <button onclick="location.href='@Url.Action("AllProducts","Admin")'">CREATE/EDIT/DELETE PRODUCTS</button>
            <p>Edit product detail<br />Activate/Deactivate existing products</p>
        </div>
        <div class="grid-item">
            <button onclick="location.href='@Url.Action("AllDiscounts","Admin")'">CREATE/EDIT/DELETE DISCOUNTS</button>
            <p>Create/Delete discounts</p>
        </div>
    </div>

</div>

