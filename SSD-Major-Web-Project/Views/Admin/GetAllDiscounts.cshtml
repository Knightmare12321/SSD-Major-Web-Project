@model List<SSD_Major_Web_Project.ViewModels.DiscountVM>

@{
    ViewData["Title"] = "GetAllDiscounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table transaction-table">
        <thead>
            <tr>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Discount Code</th>
                <th>Type</th>
                <th>Value</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td> @Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td> @Html.DisplayFor(modelItem => item.PkDiscountCode)</td>
                    <td> @Html.DisplayFor(modelItem => item.DiscountType)</td>
                    <td> @Html.DisplayName(item.DiscountValue.ToString())</td>
                    <td> @Html.DisplayName(item.IsActive == "1" ? "Active" : "Inactive")</td>
                    <td>
                        <a asp-action="DeleteDiscount" asp-route-discountCode="@item.PkDiscountCode">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
