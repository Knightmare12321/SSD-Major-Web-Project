@model SSD_Major_Web_Project.ViewModels.AdminOrderVM

@{
    ViewData["Title"] = "AdminOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="admin-orders">
    <div class="side-bar">
        <ul>
            <li class="active" onClick="toggleSummary(this,'open-orders-sheet')">Open Orders</li>
            <li onClick="toggleSummary(this,'dispatched-orders-sheet')">Dispatched Orders</li>
        </ul>
    </div>
    <div>
        <div id="open-orders-sheet" class="summary active">
            <h1>Open Orders</h1>
                @await Html.PartialAsync("../Shared/OrderSummaryPartial", Model.OpenOrders)

        </div>
        <div id="dispatched-orders-sheet" class="summary">
            <h1>Dispatched Orders</h1>
        @await Html.PartialAsync("../Shared/OrderSummaryPartial", Model.OpenOrders)
        </div>
    </div>
</div>

<script>
    const toggleSummary = (tabClicked,sheetName) => {
        //toggle tabs
        $("#admin-orders li").removeClass("active");
        $(tabClicked).addClass("active");

        //toggle order summary sheet
        $("[id$=orders-sheet]").removeClass("active");
        $("#" + sheetName).addClass("active");
    }
</script>